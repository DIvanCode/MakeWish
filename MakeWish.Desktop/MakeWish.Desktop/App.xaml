<Application x:Class="MakeWish.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:ok="clr-namespace:MakeWish.Desktop.Dialogs.Ok"
             xmlns:yesNo="clr-namespace:MakeWish.Desktop.Dialogs.YesNo"
             xmlns:login="clr-namespace:MakeWish.Desktop.Forms.Login"
             xmlns:register="clr-namespace:MakeWish.Desktop.Forms.Register"
             xmlns:profile="clr-namespace:MakeWish.Desktop.Pages.Profile"
             xmlns:userCard="clr-namespace:MakeWish.Desktop.Cards.UserCard"
             xmlns:friends="clr-namespace:MakeWish.Desktop.Pages.Friends">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type Window}" x:Key="MaterialWindowStyle">
                <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
                <Setter Property="TextElement.Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                <Setter Property="TextElement.FontWeight" Value="Regular"/>
                <Setter Property="TextElement.FontSize" Value="13"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="Auto"/>
                <Setter Property="FontFamily" Value="{materialDesign:MaterialDesignFont}"/>
            </Style>
            
            <DataTemplate DataType="{x:Type ok:OkDialog}">
                <ok:OkDialogView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type yesNo:YesNoDialog}">
                <yesNo:YesNoDialogView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type login:LoginForm}">
                <login:LoginFormView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type register:RegisterForm}">
                <register:RegisterFormView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type profile:ProfilePage}">
                <profile:ProfilePageView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type userCard:UserCard}">
                <userCard:UserCardView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type friends:FriendsPage}">
                <friends:FriendsPageView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
