<UserControl x:Class="MakeWish.Desktop.Views.Wishes.WishView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wishes="clr-namespace:MakeWish.Desktop.ViewModels.Wishes"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=wishes:WishViewModel}">
    <materialDesign:Card Padding="32" Margin="16, 0, 16, 16" Background="LightCyan">
        <StackPanel>
            <TextBlock Text="{Binding Wish.Title}"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0"/>
            
            <Image Width="300" Source="{Binding Wish.ImageUrl}"/>
            
            <TextBlock Text="{Binding Wish.Description}"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       HorizontalAlignment="Left"
                       Margin="0,20,0,0"/>
            
            <StackPanel Orientation="Horizontal"  Margin="0,20,0,0">
                <TextBlock Text="Статус"
                           Margin="0,0,10,0"
                           FontSize="15"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Wish.Status}"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           HorizontalAlignment="Left"/>
            </StackPanel>
            
            <!-- Owner -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock Text="Загадал"
                           Margin="0,0,10,0"
                           FontSize="15"
                           VerticalAlignment="Center"/>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding NavigateToUserCommand}"
                        CommandParameter="{Binding Wish.Owner.Id}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountCircle"
                                                 Width="24"
                                                 Height="24"
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Wish.Owner.DisplayName}"
                                   Margin="4,0,4,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>    
            </StackPanel>
            
            <!-- Promiser -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,20,0,0"
                        Visibility="{Binding ShowPromiser, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Обещает"
                           Margin="0,0,10,0"
                           FontSize="15"
                           VerticalAlignment="Center"/>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding NavigateToUserCommand}"
                        CommandParameter="{Binding Wish.Promiser.Id}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountCircle"
                                                 Width="24"
                                                 Height="24"
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Wish.Promiser.DisplayName}"
                                   Margin="4,0,4,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>    
            </StackPanel>
            
            <!-- Completer -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,20,0,0"
                        Visibility="{Binding ShowCompleter, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Выполнил"
                           Margin="0,0,10,0"
                           FontSize="15"
                           VerticalAlignment="Center"/>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding NavigateToUserCommand}"
                        CommandParameter="{Binding Wish.Completer.Id}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountCircle"
                                                 Width="24"
                                                 Height="24"
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Wish.Completer.DisplayName}"
                                   Margin="4,0,4,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <TextBlock Visibility="{Binding ShowWaitingApprove, Converter={StaticResource BooleanToVisibilityConverter}}" 
                           Text="Ожидает подтверждения"
                           Margin="4,0,4,0"
                           FontSize="15"
                           VerticalAlignment="Center"/>
                <Button Visibility="{Binding ShowApproveButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Command="{Binding ApproveCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        VerticalAlignment="Center"
                        Margin="8,0,0,0">
                    <materialDesign:PackIcon Kind="Check"/>
                </Button>
                <Button Visibility="{Binding ShowRejectButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Command="{Binding RejectCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        VerticalAlignment="Center"
                        Margin="8,0,0,0">
                    <materialDesign:PackIcon Kind="Close"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </materialDesign:Card>
</UserControl>
