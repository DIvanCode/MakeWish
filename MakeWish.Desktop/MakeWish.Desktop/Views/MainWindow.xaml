<Window x:Class="MakeWish.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:MakeWish.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="MakeWish" Height="650" Width="1000"
        Style="{StaticResource MaterialWindowStyle}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Text="MakeWish"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   HorizontalAlignment="Center"
                   Width="150"
                   Margin="25,20,25,20"/>

        <StackPanel Grid.Column="0"
                    Visibility="{Binding IsHeaderVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Width="150"
                    Margin="25, 100, 25, 100">
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding NavigateToProfileCommand}"
                    Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Account" 
                                             Width="24" 
                                             Height="24"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="Профиль"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding NavigateToFriendsCommand}"
                    Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountGroup" 
                                           Width="24" 
                                           Height="24"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="Друзья"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding NavigateToWishesCommand}"
                    Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Wish" 
                                             Width="24" 
                                             Height="24"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="Желания"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding LogoutCommand}"
                    Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Logout" 
                                           Width="24" 
                                           Height="24"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="Выйти"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="20, 20, 0, 0"
                        Visibility="{Binding IsHeaderVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button Width="50"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ArrowLeft"/>
                </Button>
                
                <Button Width="50"
                        Command="{Binding GoForwardCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ArrowRight"/>
                </Button>
            </StackPanel>
            
            <ContentControl Grid.Row="1" 
                            Content="{Binding CurrentViewModel}"/>
        </Grid>
    </Grid>
</Window> 