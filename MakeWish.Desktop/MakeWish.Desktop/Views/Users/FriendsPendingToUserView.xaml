<UserControl x:Class="MakeWish.Desktop.Views.Users.FriendsPendingToUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:users="clr-namespace:MakeWish.Desktop.ViewModels.Users"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=users:FriendsPendingToUserViewModel}">
    <materialDesign:Card Padding="32" Margin="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="Друзья"
                        Command="{Binding ShowConfirmedFriendshipsCommand}"
                        Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Исходящие заявки"
                        Command="{Binding ShowPendingFriendshipsFromUserCommand}"
                        Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Входящие заявки"
                        Command="{Binding ShowPendingFriendshipsToUserCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            
            <ItemsControl Grid.Row="1"
                          ItemsSource="{Binding Users}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding DataContext.NavigateToUserCommand,
                                          RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding Id}"
                                Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountClock"
                                                       Width="24"
                                                       Height="24"
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}"
                                         Margin="4,0,4,0"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Surname}"
                                         VerticalAlignment="Center"/>
                                <Button
                                        Command="{Binding DataContext.ConfirmFriendshipCommand,
                                              RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding Id}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        VerticalAlignment="Center"
                                        Margin="8,0,0,0">
                                    <materialDesign:PackIcon Kind="Check"/>
                                </Button>
                                <Button
                                        Command="{Binding DataContext.RemoveFriendshipCommand,
                                              RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding Id}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        VerticalAlignment="Center"
                                        Margin="8,0,0,0">
                                    <materialDesign:PackIcon Kind="Close"/>
                                </Button>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </materialDesign:Card>
</UserControl> 