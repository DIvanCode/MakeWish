<UserControl x:Class="MakeWish.Desktop.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:MakeWish.Desktop.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:LoginViewModel}">
    <materialDesign:Card Padding="32" Margin="16">
        <StackPanel>
            <TextBlock Text="Вход" 
                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,32"/>

            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Электронная почта"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Width="400"
                     Margin="0,0,0,16"/>

            <PasswordBox x:Name="PasswordBox"
                        materialDesign:HintAssist.Hint="Пароль"
                        Style="{StaticResource  MaterialDesignFloatingHintPasswordBox}"
                        Width="400"
                        Margin="0,0,0,32"/>

            <Button Content="Войти"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Height="35"
                    Width="400"/>

            <Button Content="Нет аккаунта? Зарегистрироваться"
                    Command="{Binding NavigateToRegisterCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Height="35"
                    Width="400"
                    Margin="0,8,0,0"/>
        </StackPanel>
    </materialDesign:Card>
</UserControl> 