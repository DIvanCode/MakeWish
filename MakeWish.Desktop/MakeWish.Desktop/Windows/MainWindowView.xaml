<Window x:Class="MakeWish.Desktop.Windows.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:windows="clr-namespace:MakeWish.Desktop.Windows"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=windows:MainWindow}"
        Title="Make Wish"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Text="MakeWish"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   HorizontalAlignment="Center"
                   Width="150"
                   Margin="25,20,25,20"/>

        <StackPanel Grid.Column="0"
                    Visibility="{Binding ShowHeader, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Width="150"
                    Margin="25, 100, 25, 100">
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding ShowProfileCommand}"
                    Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Account" 
                                             Width="24" 
                                             Height="24"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="Профиль"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding ShowFriendsCommand}"
                    Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountGroup" 
                                           Width="24" 
                                           Height="24"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="Друзья"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding ShowWishesCommand}"
                    Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Gift" 
                                             Width="24" 
                                             Height="24"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="Желания"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding LogoutCommand}"
                    Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Logout" 
                                           Width="24" 
                                           Height="24"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="Выйти"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="20, 20, 0, 0"
                        Visibility="{Binding ShowHeader, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button Width="50"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ArrowLeft"/>
                </Button>
                
                <Button Width="50"
                        Command="{Binding GoForwardCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ArrowRight"/>
                </Button>
            </StackPanel>
            
            <Grid Grid.Row="1">
                <Grid>
                    <ContentControl
                        Content="{Binding CurrentPage}"
                        Visibility="{Binding ShowPage, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <ContentControl
                        Content="{Binding CurrentOverlay}"
                        Visibility="{Binding ShowOverlay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>

                    <Grid Visibility="{Binding IsContentLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.Background>
                            <SolidColorBrush Color="Black" Opacity="0.3"/>
                        </Grid.Background>

                        <Border
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="{DynamicResource MaterialDesignPaper}"
                            CornerRadius="10"
                            Padding="20"
                            Effect="{DynamicResource MaterialDesignElevation4}">
        
                            <StackPanel Orientation="Vertical" Width="250">
                                <TextBlock Text="Загрузка..."
                                           FontWeight="Bold"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,20"/>
            
                                <ProgressBar
                                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    IsIndeterminate="True"
                                    Height="6"
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                    Margin="0,0,0,30"/>
            
                                <Button Content="Закрыть"
                                        Command="{Binding CancelLoadingCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        HorizontalAlignment="Center"
                                        Width="100"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
