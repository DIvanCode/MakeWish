<UserControl x:Class="MakeWish.Desktop.Forms.Wishes.EditWishFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MakeWish.Desktop.Forms.Wishes"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=local:EditWishForm}">
    <materialDesign:Card Margin="16">
        <Grid>
            <Button Command="{Binding CloseCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Padding="0"
                    MinWidth="0"
                    MinHeight="0"
                    Width="Auto"
                    Height="Auto"
                    Margin="0">
                <materialDesign:PackIcon Kind="Close"
                                         Width="24"
                                         Height="24"/>
            </Button>
            <StackPanel Margin="32">
                <TextBlock Text="Редактирование желания" 
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Желание"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Width="400"
                         Margin="0,0,0,32"/>
            
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Описание"
                         materialDesign:HintAssist.IsFloating="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="400"
                         Height="Auto"
                         MinHeight="80"
                         VerticalContentAlignment="Bottom"
                         Padding="8"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,0,0,32"/>

            
                <CheckBox IsChecked="{Binding IsPublic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          Content="Открыто для других пользователей"
                          FontSize="13"
                          Foreground="Gray"
                          Padding="7, 0, 0, 3"
                          Margin="0,0,0,48"/>
            
                <Button Content="Сохранить"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Height="35"
                        Width="400"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
